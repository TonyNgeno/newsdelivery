<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#424242"
    tools:context="com.veekay.newsdelivery.ui.ArticleContentFragment">
    <ImageView
        android:id="@+id/articleImageView"
        android:src="@drawable/aljazeera"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/articleTitle"
        android:text="@string/articleTitle"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:textColor="#b2ebf2
"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/articleImageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"/>
    <TextView
        android:id="@+id/publishedAtTextView"
        android:text="@string/articlePublishedAt"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/articleTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/articleDescription"
        android:text="@string/articleDescription"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/articleTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp" />
    <ImageView
        android:id="@+id/openInBrowserIcon"
        android:src="@drawable/ic_open_in_new_white_24dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/articleTitle"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"/>


</android.support.constraint.ConstraintLayout>
